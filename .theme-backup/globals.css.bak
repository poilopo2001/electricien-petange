@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    @apply scroll-smooth;
  }

  body {
    @apply font-sans text-gray-900 antialiased;
  }

  * {
    @apply border-gray-200;
  }
}

@layer components {
  /* Card Modern */
  .card-modern {
    @apply bg-white rounded-2xl p-8 border border-gray-100 shadow-lg hover:shadow-3xl hover:border-accent transition-all duration-300;
  }

  /* Glassmorphism */
  .glass {
    @apply bg-white/10 backdrop-blur-md border border-white/20;
  }

  /* Buttons personnalisés */
  .btn-primary {
    @apply bg-primary text-white rounded-lg px-6 py-3 font-semibold shadow-xl hover:bg-primary-600 hover:scale-105 active:scale-95 transition-all duration-300;
  }

  .btn-accent {
    @apply bg-accent text-white rounded-lg px-6 py-3 font-semibold shadow-accent shadow-2xl hover:bg-accent-600 hover:scale-105 active:scale-95 transition-all duration-300;
  }

  .btn-secondary {
    @apply bg-gray-200 text-gray-900 rounded-lg px-6 py-3 font-semibold shadow-lg hover:bg-gray-300 hover:scale-105 active:scale-95 transition-all duration-300;
  }

  .btn-outline {
    @apply border-2 border-primary text-primary rounded-lg px-6 py-3 font-semibold hover:bg-primary hover:text-white shadow-md hover:shadow-lg transition-all duration-300;
  }

  /* Typography */
  .text-hero {
    @apply text-4xl sm:text-6xl lg:text-7xl xl:text-8xl font-extrabold leading-none;
  }

  .text-h2 {
    @apply text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight;
  }

  .text-h3 {
    @apply text-2xl sm:text-3xl font-bold;
  }

  .text-body-large {
    @apply text-lg sm:text-xl leading-relaxed;
  }

  .text-body {
    @apply text-base leading-relaxed;
  }

  /* Gradients */
  .gradient-hero {
    background: linear-gradient(135deg, rgba(0, 61, 165, 0.95) 0%, rgba(0, 49, 137, 0.9) 100%);
  }

  .gradient-accent {
    background: linear-gradient(135deg, rgba(0, 163, 224, 0.95) 0%, rgba(0, 130, 179, 0.9) 100%);
  }

  .gradient-primary {
    background: linear-gradient(to bottom, #003da5, #003189);
  }

  /* Container */
  .container {
    @apply mx-auto px-4 max-w-7xl;
  }
}

@layer utilities {
  /* Animations personnalisées */
  .animate-fadeInUp {
    animation: fadeInUp 0.8s ease-out;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-pulse-glow {
    animation: pulseGlow 2s ease-in-out infinite;
  }

  /* Delays pour stagger animations */
  .delay-100 {
    animation-delay: 100ms;
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  .delay-300 {
    animation-delay: 300ms;
  }

  .delay-400 {
    animation-delay: 400ms;
  }

  .delay-500 {
    animation-delay: 500ms;
  }

  .delay-600 {
    animation-delay: 600ms;
  }

  /* Scrollbar Styling */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  ::-webkit-scrollbar-thumb {
    background: #003da5;
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #003189;
  }
}

/* Keyframes */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(50px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

@keyframes pulseGlow {
  0%,
  100% {
    box-shadow: 0 0 20px rgba(0, 163, 224, 0.4);
    transform: scale(1);
  }
  50% {
    box-shadow: 0 0 40px rgba(0, 163, 224, 0.6);
    transform: scale(1.05);
  }
}

/* Smooth Page Transitions */
@media (prefers-reduced-motion: no-preference) {
  html {
    scroll-behavior: smooth;
  }
}

/* Print Styles */
@media print {
  .no-print {
    display: none !important;
  }
}

/* ===================================
   BLOG ARTICLE STYLES - OPTIMIZED FOR READING
   =================================== */

.article-content {
  @apply max-w-none;
  font-size: 18px;
  line-height: 1.8;
  color: #1f2937;
}

/* Headings with better hierarchy */
.article-content h2 {
  @apply text-4xl font-bold text-gray-900 mt-16 mb-8;
  line-height: 1.3;
  letter-spacing: -0.02em;
}

.article-content h3 {
  @apply text-2xl font-bold text-primary mt-12 mb-6;
  line-height: 1.4;
}

.article-content h4 {
  @apply text-xl font-semibold text-gray-800 mt-8 mb-4;
}

/* Paragraphs with optimal reading */
.article-content p {
  @apply mb-6 text-gray-700;
  font-size: 18px;
  line-height: 1.8;
  max-width: 75ch; /* Optimal line length for readability */
}

.article-content p strong {
  @apply text-gray-900 font-semibold;
}

/* Lists with proper spacing */
.article-content ul {
  @apply my-8 space-y-4;
  list-style: none;
  padding-left: 0;
}

.article-content ul li {
  @apply pl-8 relative text-gray-700;
  font-size: 17px;
  line-height: 1.7;
}

.article-content ul li::before {
  content: "✓";
  @apply absolute left-0 text-accent font-bold text-xl;
}

/* Ordered lists with numbers */
.article-content ol {
  @apply my-8 space-y-5;
  counter-reset: list-counter;
  list-style: none;
  padding-left: 0;
}

.article-content ol li {
  counter-increment: list-counter;
  @apply relative pl-12 text-gray-700;
  font-size: 17px;
  line-height: 1.7;
}

.article-content ol li::before {
  content: counter(list-counter);
  @apply absolute left-0 top-1 w-8 h-8 bg-primary text-white rounded-full flex items-center justify-center font-bold text-sm;
}

/* Nested lists */
.article-content ol li ol,
.article-content ul li ul {
  @apply mt-4 mb-2;
}

/* Links */
.article-content a {
  @apply text-primary font-medium underline decoration-2 underline-offset-4 hover:text-accent hover:decoration-accent transition-colors;
}

/* Divs and boxes */
.article-content > div {
  @apply my-10;
}

/* Grid layouts in content */
.article-content .grid {
  @apply gap-6;
}

/* Alert/Info boxes in articles */
.article-content [class*="bg-gray-50"],
.article-content [class*="bg-blue-50"],
.article-content [class*="bg-green-50"],
.article-content [class*="bg-red-50"],
.article-content [class*="bg-orange-50"],
.article-content [class*="bg-yellow-50"] {
  padding: 2rem;
  border-radius: 1rem;
  margin-top: 2.5rem;
  margin-bottom: 2.5rem;
}

.article-content [class*="bg-red-50"] {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.article-content [class*="bg-blue-50"] {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.article-content [class*="bg-yellow-50"] {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.article-content [class*="bg-green-50"] {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

/* Icons in content */
.article-content svg {
  @apply inline-block;
}

/* Tables if needed */
.article-content table {
  @apply w-full my-8 border-collapse;
}

.article-content th {
  @apply bg-gray-100 text-left p-4 font-semibold text-gray-900 border-b-2 border-gray-300;
}

.article-content td {
  @apply p-4 border-b border-gray-200;
}

/* Code blocks */
.article-content code {
  @apply bg-gray-100 text-primary px-2 py-1 rounded text-base font-mono;
}

.article-content pre {
  @apply bg-gray-900 text-gray-100 p-6 rounded-xl my-8 overflow-x-auto;
}

.article-content pre code {
  @apply bg-transparent text-gray-100 p-0;
}

/* Blockquotes */
.article-content blockquote {
  @apply border-l-4 border-primary bg-blue-50 pl-8 pr-6 py-6 my-8 italic text-lg;
}

/* Images */
.article-content img {
  @apply rounded-xl shadow-lg my-10 mx-auto;
}

/* HR separators */
.article-content hr {
  @apply my-12 border-0 h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent;
}

/* Improve mobile readability */
@media (max-width: 640px) {
  .article-content {
    font-size: 17px;
  }

  .article-content h2 {
    @apply text-3xl mt-12 mb-6;
  }

  .article-content h3 {
    @apply text-xl mt-8 mb-4;
  }

  .article-content p {
    font-size: 17px;
  }
}
